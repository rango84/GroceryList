<Window x:Class="MyGroceryList.Recipe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MyGroceryList"
        Title="AddRecipe" Height="414" Width="700">
    <DockPanel>
        <Label Name="Status" DockPanel.Dock="Bottom" Height="23"/>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="399*" />
            <ColumnDefinition Width="163*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="68*" />
            <RowDefinition Height="263*" />
        </Grid.RowDefinitions>
        <Label Content="Recipe Name:" Height="28" HorizontalAlignment="Left" Margin="15,16,0,0" Name="lblRecipeName" VerticalAlignment="Top" Width="112" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="151,18,0,0" Name="txtRecipeName" VerticalAlignment="Top" Width="199" />
        <ListView Margin="26,27,21,32" Name="listView1" Grid.Row="1" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Ingredient Name" />
                    <GridViewColumn Header="Amount" />
                    <GridViewColumn Header="Measure"  Width="75"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
    </DockPanel>
</Window>
